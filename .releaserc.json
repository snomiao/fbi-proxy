{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": true,
        "provenance": true
      }
    ],
    [
      "semantic-release-cargo",
      {
        "registryUrl": "https://crates.io",
        "cargoProject": "rs"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          {
            "path": "release/fbi-proxy-linux-x64",
            "name": "fbi-proxy-linux-x64"
          },
          {
            "path": "release/fbi-proxy-linux-arm64",
            "name": "fbi-proxy-linux-arm64"
          },
          {
            "path": "release/fbi-proxy-macos-x64",
            "name": "fbi-proxy-macos-x64"
          },
          {
            "path": "release/fbi-proxy-macos-arm64",
            "name": "fbi-proxy-macos-arm64"
          },
          {
            "path": "release/fbi-proxy-windows-x64.exe",
            "name": "fbi-proxy-windows-x64.exe"
          },
          {
            "path": "release/fbi-proxy-windows-arm64.exe",
            "name": "fbi-proxy-windows-arm64.exe"
          }
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["package.json", "CHANGELOG.md", "rs/Cargo.toml"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ]
  ]
}
